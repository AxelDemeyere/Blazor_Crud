@using BlazorDemo.Shared.Models
@using System.Globalization

<div class="row g-3 mb-4">
    <div class="col-12 col-sm-6 col-lg-3">
        <div class="card text-white bg-primary text-center shadow-sm h-100">
            <div class="card-body">
                <h2 class="display-4 fw-bold mb-1">@Produits.Count</h2>
                <p class="card-text mb-0">Total Produits</p>
            </div>
        </div>
    </div>

    <div class="col-12 col-sm-6 col-lg-3">
        <div class="card text-white bg-success text-center shadow-sm h-100">
            <div class="card-body">
                <h2 class="display-4 fw-bold mb-1">@ProduitsActifs</h2>
                <p class="card-text mb-0">Produits Actifs</p>
            </div>
        </div>
    </div>

    <div class="col-12 col-sm-6 col-lg-3">
        <div class="card text-dark bg-warning text-center shadow-sm h-100">
            <div class="card-body">
                <h2 class="display-4 fw-bold mb-1">@ProduitsEnRupture</h2>
                <p class="card-text mb-0">En Rupture</p>
            </div>
        </div>
    </div>

    <div class="col-12 col-sm-6 col-lg-3">
        <div class="card text-white bg-info text-center shadow-sm h-100">
            <div class="card-body">
                <h2 class="display-4 fw-bold mb-1">@ValeurTotale.ToString("C", CultureInfo.GetCultureInfo("fr-FR"))</h2>
                <p class="card-text mb-0">Valeur Stock</p>
            </div>
        </div>
    </div>
</div>




