@using BlazorDemo.Shared.Models


<div class="modal fade @(Afficher ? "show" : "")" 
     id="modalProduit" 
     tabindex="-1" 
     style="display: @(Afficher ? "block" : "none")"
     aria-labelledby="modalProduitLabel" 
     aria-hidden="@(!Afficher)">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalProduitLabel">
                    <i class="bi bi-plus-circle"></i> @Titre
                </h5>
                <button type="button" class="btn-close" @onclick="Fermer" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <label for="nom" class="form-label">Nom *</label>
                        <input type="text" 
                               class="form-control" 
                               id="nom" 
                               placeholder="Ex: Laptop Pro 15" 
                               @bind="_produit.Nom"
                               required />
                    </div>
                    
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea class="form-control" 
                                  id="description" 
                                  rows="3" 
                                  placeholder="Description du produit"
                                  @bind="_produit.Description"></textarea>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label for="prix" class="form-label">Prix *</label>
                            <div class="input-group">
                                <input type="number" 
                                       class="form-control" 
                                       id="prix" 
                                       step="0.01" 
                                       min="0" 
                                       placeholder="0.00"
                                       @bind="_produit.Prix"
                                       required />
                                <span class="input-group-text">€</span>
                            </div>
                        </div>
                        
                        <div class="col-md-4 mb-3">
                            <label for="stock" class="form-label">Stock *</label>
                            <input type="number" 
                                   class="form-control" 
                                   id="stock" 
                                   min="0" 
                                   placeholder="0"
                                   @bind="_produit.Stock"
                                   required />
                        </div>
                        
                        <div class="col-md-4 mb-3">
                            <label for="categorie" class="form-label">Catégorie *</label>
                            <select class="form-select" 
                                    id="categorie" 
                                    @bind="_produit.Categorie"
                                    required>
                                <option value="">Sélectionner...</option>
                                @foreach (var categorie in Enum.GetValues<EnumCategorie>())
                                {
                                    <option value="@categorie">@categorie</option>
                                }
                            </select>
                        </div>
                    </div>
                    
                    <div class="mb-3 form-check">
                        <input type="checkbox" 
                               class="form-check-input" 
                               id="estActif" 
                               @bind="_produit.EstActif" />
                        <label class="form-check-label" for="estActif">
                            Produit actif
                        </label>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" @onclick="Fermer">Annuler</button>
                <button type="button" class="btn btn-primary" @onclick="Enregistrer">
                    <i class="bi bi-save"></i> Enregistrer
                </button>
            </div>
        </div>
    </div>
</div>

@if (Afficher)
{
    <div class="modal-backdrop fade show"></div>
}